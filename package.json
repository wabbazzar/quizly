{
  "name": "quizly",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/generate-deck-manifest.js && vite",
    "build": "node scripts/generate-deck-manifest.js && tsc -b && vite build",
    "build:gh-pages": "node scripts/generate-deck-manifest.js && tsc -b && vite build --base /quizly/ && node scripts/fix-gh-pages-manifest.js",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "lighthouse-ci autorun",
    "lighthouse": "lighthouse http://localhost:5173 --view",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "generate-manifest": "node scripts/generate-deck-manifest.js",
    "ci:install": "npm ci --prefer-offline --no-audit",
    "ci:build": "npm run generate-manifest && npm run type-check && npm run build",
    "ci:test": "npm run test:coverage && npm run test:integration",
    "ci:quality": "npm run lint && npm run format:check && npm run type-check"
  },
  "dependencies": {
    "@types/classnames": "^2.3.0",
    "classnames": "^2.5.1",
    "framer-motion": "^11.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.2",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.4.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.8",
    "audit-ci": "^7.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.14.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "sharp": "^0.34.3",
    "sharp-cli": "^5.2.0",
    "terser": "^5.44.0",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^6.0.7",
    "vite-bundle-analyzer": "^0.12.1",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^2.1.8"
  }
}
